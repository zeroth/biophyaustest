---
layout: layouts/base.njk
templateClass: home
---

<main class="md:p-10 p-5">
    <div class="container m-auto">
        {{ content | safe }}
    </div>

    <div class="container m-auto">
        <h2>Upcoming talks</h2>
        <div class="m-auto md:grid md:grid-cols-2 md:gap-5 pb-5">
            {% for talk in talks %}
            {% if talk.active %}
            <div class="max-w-full md:w-full mb-5 md:mb-0">
                <div class="flex max-w-full md:w-full h-5/6 md:p-5 p-2 border rounded-t-md">
                    <div class="w-1/4">
                        <img class="object-cover h-full " src="/assets/images/{{talk.image}}" alt="{{talk.name}}">
                    </div>
                    <div class="w-3/4 ">
                        <div class="pl-5">
                            <h2><a href="/talk/{{ talk.date | slug }}-{{ talk.name | slug }}/">{{talk.name}}</a></h2>
                            <h4 class="text-md font-bold">{{talk.title | titleCase if talk.title }}</h4>
                        </div>
                        <div class="pl-5 md:text-justify">
                            <blockquote class="break-words">
                                <a href="/talk/{{ talk.date | slug }}-{{ talk.name | slug }}/">{% textsize talk.about,
                                    350
                                    %}</a>
                            </blockquote>
                            <p class="text-md pt-2 italic">{{talk.organization | titleCase if talk.organization }}</p>
                        </div>
                        
                    </div>
                </div>
                <div class="flex pl-5 bg-gray-200 rounded-b-md shadow-lg">
                    <div class="pr-5 pb-3">
                        <div>On : {{talk.date | htmlDateString}} {{talk.time}}</div>
                        {% if talk.zoom %}
                        <div>Id: <a href="{{talk.zoom.url}}"><strong>{{talk.zoom.id}}</strong></a> <br class="md:hidden"> Password:
                            <strong>{{talk.zoom.password}}</strong>
                        </div>
                        {% endif %}
                    </div>
                    <div>

                    </div>
                </div>
            </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>

    <div class="container m-auto">
        <h2>Past talks</h2>
        <div class="m-auto grid grid-flow-row auto-rows-max md:grid md:grid-cols-3 md:gap-2">
            {% for talk in talks %}
            {% if not talk.active %}
            <div class="max-w-full md:w-full ">
                <div class="flex max-w-full md:w-full h-full p-5 border">
                    <div class="flex-none">
                        <img class="object-contain w-24 " src="/assets/images/{{talk.image}}" alt="{{talk.name}}">
                    </div>
                    <div class="flex-grow pl-5">
                        <div class="">
                            <h2><a href="/talk/{{ talk.date | slug }}-{{ talk.name | slug }}/">{{talk.name}}</a></h2>
                            <h4 class="text-md font-bold">{{talk.organization | titleCase}}</h4>
                        </div>
                        <div class="pr-5 ">
                            <div>{{talk.date}}</div>
                            <div>{{talk.time}}</div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>

</main>